<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taufiqismail.quiz1.learnActivity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Bendera negara di dunia"
         android:gravity="center"
         android:textAllCaps="true"
         android:textColor="@color/warnabiru"
         android:textSize="30dp"/>

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/brazil"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Brazil"
         android:gravity="center"
         android:textAllCaps="true"
         android:textColor="@color/warnamerah"
         android:textSize="20sp"/>

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/japan"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="jepang"
         android:gravity="center"
         android:textAllCaps="true"
         android:textColor="@color/warnahijau"
         android:textSize="20sp"/>

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/germany"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="jerman"
         android:gravity="center"
         android:textAllCaps="true"
         android:textColor="@color/warnamerah"
         android:textSize="20sp"/>

 </LinearLayout>
</ScrollView>
